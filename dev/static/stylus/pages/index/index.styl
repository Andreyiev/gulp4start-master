.about {
    padding 300px;
    background: $grey
    text-align: center
    width 100%
    
    &__heading {
        text-align: center
        font-family: 'Roboto', sans-serif
        margin-bottom 20px  
    }
    .about__text {
        margin-bottom 100px
        font-family: 'Roboto', sans-serif
        text-align: center

        p {
           margin-bottom 20px  
        }

    }
    .message {
        margin-bottom 100px
        text-align: center
        font-family: 'Roboto', sans-serif;
        color: #fff;
        background: #000;
        margin-top: 30px;
        height: 42px;
        width: 180px;
        border-radius: 25px;
        font-weight: bold;
    }
}